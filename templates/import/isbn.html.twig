{# templates/manifestation/isbn.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}ISBNからインポート{% endblock %}

{% block body %}
    <div class="container py-2">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white py-1">
                <h2 class="mb-0 fs-5 lh-1">ISBNから書籍情報をインポート</h2>
            </div>

            <div class="card-body p-3">
                <div class="alert alert-info small">
                    <p class="mb-0">
                        国立国会図書館のデータベースからISBNを使って書籍情報をインポートします。
                        ISBN-10またはISBN-13を入力してください。ハイフンの有無は問いません。
                    </p>
                </div>

                {% if error %}
                    <div class="alert alert-danger small py-2" id="isbn-import-error">{{ error }}</div>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'id': 'isbn-import-form'}}) }}
                <div class="mb-3">
                    {{ form_label(form.isbn, null, {'label_attr': {'class': 'form-label small mb-0 fw-bold'}}) }}
                    {% set isbn_attr = {'class': 'form-control', 'autofocus': 'autofocus', 'id': 'isbn-input'} %}
                    {% if clear_isbn %}
                        {% set isbn_attr = isbn_attr|merge({'value': ''}) %}
                    {% endif %}
                    {{ form_widget(form.isbn, {'attr': isbn_attr}) }}
                    <div class="form-text text-danger small">
                        {{ form_errors(form.isbn) }}
                    </div>
                    <div class="form-text small text-muted">書籍のISBNコードを入力してください</div>
                </div>

                <div class="form-check mb-2">
                    {{ form_widget(form.continuousImport, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.continuousImport, null, {'label_attr': {'class': 'form-check-label small'}}) }}
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="submit" class="btn btn-primary btn-sm" id="isbn-import-submit-btn">
                        <span id="isbn-import-btn-text">検索してインポート</span>
                        <span id="isbn-import-btn-spinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                    </button>

                    <a href="{{ path('app_manifestation_index') }}" class="btn btn-outline-secondary btn-sm">
                        一覧に戻る
                    </a>
                </div>

                {% if imported_items is not empty %}
                    <div class="mt-3">
                        <div class="small text-muted mb-1">インポート済み（最新が上）</div>
                        <ul class="list-group">
                            {% for item in imported_items %}
                                <li class="list-group-item py-1">
                                    {% if item.id is defined and item.id %}
                                        <div class="fw-bold small">
                                            <a href="{{ path('app_manifestation_show', {'id': item.id}) }}" class="text-decoration-none">
                                                {{ item.title }}
                                            </a>
                                        </div>
                                    {% else %}
                                        <div class="fw-bold small">{{ item.title }}</div>
                                    {% endif %}
                                    <div class="small text-muted">ISBN: {{ item.isbn }}</div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('isbn-import-form');
            const btn = document.getElementById('isbn-import-submit-btn');
            const btnText = document.getElementById('isbn-import-btn-text');
            const spinner = document.getElementById('isbn-import-btn-spinner');
            const errorAlert = document.getElementById('isbn-import-error');
            const isbnInput = document.getElementById('isbn-input');
            const shouldClearIsbn = {{ clear_isbn ? 'true' : 'false' }};

            if (!form || !btn || !btnText || !spinner) return;

            if (isbnInput && shouldClearIsbn) {
                isbnInput.value = '';
                isbnInput.focus();
            }

            form.addEventListener('submit', function() {
                if (errorAlert) {
                    errorAlert.classList.add('d-none');
                }

                btn.disabled = true;
                btnText.textContent = '処理中...';
                spinner.classList.remove('d-none');

                btn.classList.add('btn-secondary');
                btn.classList.remove('btn-primary');
            });
        });
    </script>
{% endblock %}
