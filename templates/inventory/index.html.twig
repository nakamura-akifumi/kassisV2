{% extends 'base.html.twig' %}

{% block title %}棚卸実行{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 fs-5">棚卸実行</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <label for="location-select" class="form-label fw-bold">1. 棚卸をするロケーションを選択</label>
                <select id="location-select" class="form-select">
                    <option value="">-- ロケーションを選択してください --</option>
                    {% for loc in locations %}
                        <option value="{{ loc }}">{{ loc }}</option>
                    {% endfor %}
                </select>
            </div>

            <div id="scan-section" class="d-none">
                <div class="alert alert-secondary mb-3">
                    <label for="identifier-input" class="form-label fw-bold">2. 識別子を読み込む</label>
                    <input type="text" id="identifier-input" class="form-control form-control-lg" placeholder="スキャンしてください..." autofocus>
                    <div class="form-text">読み込むたびに下のリストに追加されます。</div>
                </div>

                <div class="mb-4">
                    <h6>読み込み済みリスト (合計: <span id="scan-count" class="badge bg-info">0</span>)</h6>
                    <div class="border rounded p-2 bg-light" style="max-height: 250px; overflow-y: auto;">
                        <ul id="scan-list" class="list-group list-group-flush small">
                            <!-- スキャン結果がここに追加される -->
                        </ul>
                    </div>
                </div>

                <form action="{{ path('app_inventory_check') }}" method="post" id="inventory-form">
                    <input type="hidden" name="location" id="form-location">
                    <div id="hidden-inputs"></div>
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        4. ロケーションの棚卸終了
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const locationSelect = document.getElementById('location-select');
    const scanSection = document.getElementById('scan-section');
    const identifierInput = document.getElementById('identifier-input');
    const scanList = document.getElementById('scan-list');
    const scanCount = document.getElementById('scan-count');
    const hiddenInputs = document.getElementById('hidden-inputs');
    const formLocation = document.getElementById('form-location');

    let count = 0;

    locationSelect.addEventListener('change', async function() {
        if (this.value) {
            scanSection.classList.remove('d-none');
            formLocation.value = this.value;
            
            // 既存のスキャンデータを読み込み
            scanList.innerHTML = '';
            hiddenInputs.innerHTML = '';
            count = 0;
            
            const response = await fetch(`/inventory/resume/${encodeURIComponent(this.value)}`);
            const data = await response.json();
            
            data.identifiers.forEach(id => {
                addIdentifierToUI(id);
            });
            
            identifierInput.focus();
        } else {
            scanSection.classList.add('d-none');
        }
    });

    function addIdentifierToUI(id) {
        const li = document.createElement('li');
        li.className = 'list-group-item py-1';
        li.textContent = id;
        scanList.prepend(li);
        
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'identifiers[]';
        input.value = id;
        hiddenInputs.appendChild(input);

        count++;
        scanCount.textContent = count;
    }

    identifierInput.addEventListener('keypress', async function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            const id = this.value.trim();
            if (id) {
                // サーバーに保存
                const response = await fetch('{{ path("app_inventory_add_scan") }}', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        location: locationSelect.value,
                        identifier: id
                    })
                });

                if (response.ok) {
                    addIdentifierToUI(id);
                    this.value = '';
                } else {
                    alert('保存に失敗しました。');
                }
            }
        }
    });
});
</script>
{% endblock %}
